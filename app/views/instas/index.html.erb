<% if user_signed_in? %>
    <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>

<h1>GeekInstagram</h1>
<h3>投稿一覧</h3>
<%= link_to "新規投稿へ", new_insta_path %>
<div class="instas-container">
    <% @instas.each do |t| %>
    <div class="insta">
        <%= image_tag t.image_url, size: "250x200" if t.image? %>
        <%= image_tag t.user.image_url, size: "250x200" if t.user.image? %>
            <%= t.body %>
            <%= t.created_at %>
            <%= t.user.email %>
            <% if user_signed_in? %>
                <% if current_user.already_liked?(t) %>
                    <%= link_to insta_like_path(id: t.id, insta_id: t.id), method: :delete do %>
                        <p>いいねを取り消す</p><%= t.likes.count %>
                    <% end %>
                <% else %>
                    <%= link_to insta_likes_path(id: t.id, insta_id: t.id), method: :post do %>
                        <p>いいね</p><%= t.likes.count %>
                    <% end %>
                <% end %>
            <% else %>
                <p>いいねの数 = </p><%= t.likes.count %>
            <% end %>
                <%= link_to "詳細へ", insta_path(t.id) %>
                <%= link_to "編集する", edit_insta_path(t.id) %>
                <%= button_to "削除する", insta_path(t.id), method: :delete %>
    </div>
    <% end %>
</div>
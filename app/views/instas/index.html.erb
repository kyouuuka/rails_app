<% if user_signed_in? %>
    <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>
<%= link_to "ログイン", user_session_path %>
<%= link_to "サインアップ", new_user_registration_path %>
<%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>

<h1>GeekInstagram</h1>
<h3>投稿一覧</h3>
<h3>投稿を検索</h3>
    <%= form_tag({controller:"instas",action:"index"}, method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag '検索する'  %>
<% end %>
<%= link_to "新規投稿へ", new_insta_path %>
<div class="instas-container">
    <% @instas.each do |t| %>
    <div class="insta">
        <%= image_tag t.image_url, size: "250x200" if t.image? %>
        <%= image_tag t.user.image_url, size: "250x200" if t.user.image? %>
            <%= t.body %>
            <%= t.created_at %>
            <a href="/users/<%= t.user.id %>"><%= t.user.name %></a>
            <% if user_signed_in? %>
                <% if current_user.already_liked?(t) %>
                    <%= link_to insta_like_path(id: t.id, insta_id: t.id), method: :delete do %>
                        <i class="fas fa-heart"></i><%= t.likes.count %>                   
                    <% end %>
                <% else %>
                    <%= link_to insta_likes_path(id: t.id, insta_id: t.id), method: :post do %>
                        <i class="far fa-heart"></i><%= t.likes.count %>                    
                    <% end %>
                <% end %>
            <% else %>
                <i class="far fa-heart"></i><%= t.likes.count %>           
            <% end %>
                <%= link_to "詳細へ", insta_path(t.id) %>
        <% if user_signed_in? && current_user.id == t.user_id %>
            <%= link_to "編集する", edit_insta_path(t.id) %>
            <%= link_to "削除する", insta_path(t.id), method: :delete %>
        <% end %>    
        </div>
        <% if user_signed_in? %>
        <% end %>
    <% end %>
</div>


<% if user_signed_in? %>
    <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>

<h1>GeekInstagram</h1>
<h3>投稿一覧</h3>
<%= link_to "新規投稿へ", new_insta_path %>
<div class="instas-container">
    <% @instas.each do |t| %>
    <div class="insta">
<%= image_tag t.image_url, size: "250x200" if t.image? %>
<%= image_tag t.user.image_url, size: "250x200" if t.user.image? %>
        <%= t.body %>
        <%= t.created_at %>
        <%= t.user.email %>
        <%= link_to "詳細へ", insta_path(t.id) %>
    </div>
    <% end %>
</div>